<% if @book.errors.any? %>
 <%= @book.errors.count %>error occurred
 <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= render 'list', book: @book,user: @user %>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colespan="3"></th>
  </tr>
 </thead>

 <tbody>
  <% @books.each do |book| %>
   <tr>
    <td>
     <%= link_to user_path(book.user.id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
     <% end %>
    </td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
   </tr>
  <% end %>
 </tbody>
</table>
</div>
